<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dealfaro.stw.tictactoe.MainActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:padding="10dp"
            android:id="@+id/gridLayout"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="102dp">

            <ImageButton
                android:id="@+id/imageButton00"
                android:tag="1"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:scaleType="fitCenter"
                android:onClick="clickBoard"
                />

            <ImageButton
                android:id="@+id/imageButton01"
                android:tag="2"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:scaleType="fitCenter"
                android:onClick="clickBoard"
                android:layout_row="0"
                android:layout_column="1" />

            <ImageButton
                android:tag="3"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:scaleType="fitCenter"
                android:id="@+id/imageButton02"
                android:onClick="clickBoard"
                android:layout_row="0"
                android:layout_column="2" />

            <ImageButton
                android:tag="4"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:scaleType="fitCenter"
                android:id="@+id/imageButton03"
                android:onClick="clickBoard"
                android:layout_row="1"
                android:layout_column="0" />

            <ImageButton
                android:tag="5"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:id="@+id/imageButton04"
                android:onClick="clickBoard"
                android:layout_row="1"
                android:layout_column="1"
                android:scaleType="fitCenter" />

            <ImageButton
                android:tag="6"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:id="@+id/imageButton05"
                android:onClick="clickBoard"
                android:layout_row="1"
                android:layout_column="2"
                android:scaleType="fitCenter" />

            <ImageButton
                android:tag="7"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:id="@+id/imageButton06"
                android:onClick="clickBoard"
                android:layout_row="2"
                android:layout_column="0"
                android:scaleType="fitCenter" />

            <ImageButton
                android:tag="8"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:id="@+id/imageButton07"
                android:onClick="clickBoard"
                android:layout_row="2"
                android:layout_column="1"
                android:scaleType="fitCenter" />

            <ImageButton
                android:tag="9"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:id="@+id/imageButton08"
                android:onClick="clickBoard"
                android:layout_row="2"
                android:layout_column="2"
                android:scaleType="fitCenter" />

        </GridLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Board"
            android:id="@+id/button"
            android:layout_marginTop="66dp"
            android:layout_below="@+id/gridLayout"
            android:onClick="putCross"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/wonView"
            android:text= "Circle starts!"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            />

    </RelativeLayout>
</ScrollView>